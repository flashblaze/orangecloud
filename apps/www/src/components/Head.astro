---
import { Font } from "astro:assets";

export interface Props {
    docTitle?: string;
    docDescription?: string;
    docOgUrl?: string;
    docOgImage?: string;
    docOgImageAlt?: string;
}

const {
    docTitle = "OrangeCloud - Open source alternative UI for your Cloudflare R2 buckets",
    docDescription = "OrangeCloud is an open source alternative UI for your Cloudflare R2 buckets with file preview, upload, and download capabilities.",
    docOgUrl = "https://orangecloud.app",
    docOgImage = "https://orangecloud.app/og_image.webp",
    docOgImageAlt = "OrangeCloud logo with product description",
} = Astro.props as Props;
---

<head>
    <Font cssVariable="--font-sans" preload />

    <!-- Performance optimization: Move non-critical scripts to end of head -->
    <title>{docTitle}</title>
    <meta name="description" content={docDescription} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta charset="UTF-8" />

    <!-- Critical meta tags -->
    <meta property="og:url" content={docOgUrl} />
    <meta property="og:description" content={docDescription} />
    <meta property="og:title" content={docTitle} />
    <meta property="og:image" content={docOgImage} />
    <meta property="og:type" content="website" />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:site" content="@neeraj_artx" />
    <meta name="twitter:title" content={docTitle} />
    <meta name="twitter:image" content={docOgImage} />
    <meta name="twitter:image:alt" content={docOgImageAlt} />
    <meta name="twitter:description" content={docDescription} />
    <meta name="twitter:creator" content="@neeraj_artx" />

    <link rel="sitemap" href="/sitemap-index.xml" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="shortcut icon" href="/favicon.ico" />
    <link rel="canonical" href={docOgUrl} />

    <!-- Non-critical analytics script moved to end -->
    <script type="text/javascript">
        (function (c, l, a, r, i, t, y) {
            c[a] =
                c[a] ||
                function () {
                    (c[a].q = c[a].q || []).push(arguments);
                };
            t = l.createElement(r);
            t.async = 1;
            t.src = "https://www.clarity.ms/tag/" + i;
            y = l.getElementsByTagName(r)[0];
            y.parentNode.insertBefore(t, y);
        })(window, document, "clarity", "script", "s2bdvhvoct");
    </script>
</head>
