{
  "name": "api",
  "version": "0.0.2",
  "scripts": {
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "format": "biome format . ",
    "format:fix": "biome format --write .",
    "dev": "bun run dev:api & bun run db:studio",
    "dev:api": "wrangler dev",
    "deploy": "wrangler deploy --minify",
    "update:deps": "ncu -u",
    "db:migrate": "wrangler d1 migrations apply ORANGECLOUD_DB --local",
    "db:generate": "drizzle-kit generate",
    "db:studio": "LOCAL_DB_PATH=$(find .wrangler/state/v3/d1/miniflare-D1DatabaseObject -type f -name '*.sqlite' -print -quit) drizzle-kit studio",
    "db:push": "drizzle-kit push"
  },
  "dependencies": {
    "@hono-rate-limiter/cloudflare": "^0.2.2",
    "@hono/zod-validator": "^0.7.0",
    "aws4fetch": "^1.0.20",
    "better-auth": "^1.2.9",
    "better-sqlite3": "^11.10.0",
    "cloudflare": "^4.3.0",
    "dayjs": "^1.11.13",
    "dotenv": "^16.5.0",
    "drizzle-orm": "^0.44.2",
    "fast-xml-parser": "^5.2.5",
    "hono": "^4.7.11",
    "hono-rate-limiter": "^0.4.2",
    "nanoid": "^5.1.5",
    "react": "^19.1.0",
    "zod": "^3.25.64"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@cloudflare/workers-types": "^4.20250613.0",
    "@types/node": "22.14.0",
    "drizzle-kit": "^0.31.1",
    "npm-check-updates": "^18.0.1",
    "typescript": "5.8.3",
    "wrangler": "^4.20.0"
  }
}
